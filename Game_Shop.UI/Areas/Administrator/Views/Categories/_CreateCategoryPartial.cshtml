@model Game_Shop.Database.Models.Category



<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" value="Save" class="btn btn-secondary mx-2">Save</button>
        <a type="reset" value="Cancel" asp-action="Index" asp-controller="Categories" asp-area="Administrator" class="btn btn-secondary">Cancel</a>

    </div>
</form>




@section Scripts{
    <script src="~/js/createcategory.js" asp-append-version="true"></script>
}