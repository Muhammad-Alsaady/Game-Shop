@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card rounded-4 border-success mt-4 " style="overflow: hidden; height: auto;">
    <div class="card-body p-0" >
        <div class="row">
           
            <div class="col-md-8 px-4 py-3 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder mb-1">@Model.Name</h1>
                    <span class="badge bg-info fs-2 text-dark mb-2">@Model.Category?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div>
                    @foreach (var gameDevice in Model.GameDevices)
                    {
                        <i class="@gameDevice.Device.Icon  me-2 fs-1"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"/{Settings.imagePath}/{Model.CoverImage}")" alt="@Model.Name" style="width:100%; height: 100%; object-fit: cover;" />
            </div>
        </div>

    </div>
</div>
